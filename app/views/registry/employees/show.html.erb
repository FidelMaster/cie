<div class="right_col" role="main" style="min-height: 1053px;">
  <div class="">

    <div class="clearfix"></div>
    <div class="title_page">
        RRHH
      </div>
    <div class="x_title">
      <h2><%=@registry_employee.display_name %></h2>
      <div class="clearfix"></div>
    </div>
    <% if notice.present?%>
      <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        <%= notice %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-12">

        <div class="x_panel">

          <div class="x_content">
            
            <div class="col-md-8 col-lg-8 col-sm-7">
              <!-- blockquote -->
              <blockquote>

                <h2>Nombre:</h2>
                <h4><%= @registry_employee.display_name %></h4>

                <h2>Fecha de Nacimiento:</h2>
                <h4><%= @registry_employee.birth_date_formatted %></h4>

                <h2>Fecha de inicio en la compañía:</h2>
                <h4><%= @registry_employee.start_date_formatted %></h4>

                <h2>Cargo:</h2>
                <h4><%= @registry_employee.registry_employee_position.name %></h4>

                <h2>Activo:</h2>
                <h4><%= @registry_employee.active %></h4>

                <h2>Avatar:</h2>
                <h4><%=image_tag(@registry_employee.image_source("avatar"), :style=>"max-width: 200px", :class=>"img-responsive avatar-view",  :alt=>"#{@registry_employee.display_name}", :title=>"#{@registry_employee.display_name}")%></h4>
                
              </blockquote>

              <blockquote class="blockquote-reverse">

                  <%= link_to 'Editar', edit_registry_employee_path(@registry_employee), :class=>"btn btn-primary" %>
                  <%= link_to 'Atrás', registry_employees_path, :class=>"btn btn-success" %>

              </blockquote>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>