<%= form_for(registry_therapy_group, html: {:class=>"form-horizontal form-label-left", :novalidate => nil}) do |f| %>
  <% if registry_therapy_group.errors.any? %>
    <div id="error_explanation" class="alert-danger">
      <h2><%= registry_therapy_group.errors.count %> error(es) <%=t 'activerecord.errors.template.header.other', :model => 
        t("will_paginate.models.registry_therapy_group.one")%></h2>

      <ul>
      <% registry_therapy_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="item form-group">
    <%= f.label :name, :class=>"control-label col-md-3 col-sm-3 col-xs-12" do %>
    Nombre <span class="required">*
    <%end%> 
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_field :name, :class=>"form-control col-md-7 col-xs-12",:required=>"required" %>
    </div>
  </div>

  <div class="item form-group">
    <%= f.label :description, :class=>"control-label col-md-3 col-sm-3 col-xs-12" do %>
    Descripci√≥n <span class="required">*
    <%end%> 
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= f.text_area :description, :class=>"form-control col-md-7 col-xs-12",:required=>"required" %>
    </div>
  </div>

  <div class="tab-pane">
    <div class="item form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">Salones <span class="required">*</label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= select_tag 'registry_therapy_group[registry_therapy_group_rooms_attributes][registry_therapy_room_ids]',
        options_from_collection_for_select(Registry::TherapyRoom.all, "id", "display_name", @selected_therapy_room),
        {:multiple => true, :size =>10, :class=>"select2_multiple form-control",:required=>"required"}
        %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-md-offset-3">
      <%=link_to("Cancelar", registry_therapy_groups_path, :class=>"btn btn-primary")%>
      <button id="send" type="submit" class="btn btn-success">Guardar</button>
    </div>
  </div>
<% end %>
