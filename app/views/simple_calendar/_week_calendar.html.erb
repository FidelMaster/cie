<div class="simple-calendar">
  <div class="calendar-heading">


    <div class="fc-toolbar fc-header-toolbar">
      <div class="fc-left">
        <div class="fc-button-group">
          <%= link_to content_tag(:span, nil, :class=>"fc-icon fc-icon-left-single-arrow"), calendar.url_for_previous_view+"&week=true", remote: true, :class=> "fc-prev-button fc-button fc-state-default fc-corner-left", :onclick=> "$('.container.spinner').show();"%>
          <%= link_to content_tag(:span, nil, :class=>"fc-icon fc-icon-right-single-arrow"), calendar.url_for_next_view+"&week=true", remote: true, :class=> "fc-next-button fc-button fc-state-default fc-corner-right", :onclick=> "$('.container.spinner').show();" %>
        </div>
      </div>
      <div class="fc-right">
        <div class="fc-button-group">
          <h1 class="calendar-title">
            <% if calendar.number_of_weeks == 1 %>
              Semana <%= calendar.week_number %>
            <%else%>
              Semana <%= calendar.week_number %> - <%= calendar.end_week %>
            <%end%>
          </h1>
        </div>
      </div>
    </div>
  </div>

  <div class="clearfix"><br></div> 
  <div class="clearfix"><br></div> 

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0,5).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday].capitalize %> <%=I18n.l(day, format: :short)%></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.slice(0,5).each_slice(5) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
